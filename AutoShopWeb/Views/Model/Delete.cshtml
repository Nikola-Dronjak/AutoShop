@model Model

<form method="post">
    <input asp-for="BrandId" type="hidden" value="@ViewData["BrandId"]" />
    <input asp-for="ModelId" type="hidden" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Remove Model</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Remove</button>
        <a asp-controller="Model" asp-action="Index" asp-route-BrandId="@ViewData["BrandId"]" class="btn btn-primary mx-2">Back to List</a>
    </div>
</form>
