@model List<Model>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Models</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Model" asp-action="Create" asp-route-BrandId="@ViewBag.BrandId" class="btn btn-primary">
                Add new model
            </a>
            <a asp-controller="Brand" asp-action="Index" class="btn btn-primary mx-2">Back to Brands List</a>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-strpied">
        <thead>
            <tr>
                <th class="text-center">Model name</th>
                <th class="text-center">Options</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var modelItem in Model)
            {
                <tr>
                    <td class="text-center">@modelItem.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Model" asp-action="Edit" asp-route-id="@modelItem.ModelId" class="btn btn-secondary mx-2">Edit</a>
                            <a asp-controller="Model" asp-action="Delete" asp-route-id="@modelItem.ModelId" class="btn btn-danger mx-2">Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <p>No models found.</p>
    </div>
}
