@model List<Brand>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Brands</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Brand" asp-action="Create" class="btn btn-primary">
                Add New Brand
            </a>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-strpied">
        <thead>
            <tr>
                <th class="text-center">
                    Brand name
                </th>
                <th class="text-center">
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Brand in Model)
            {
                <tr>
                    <td class="text-center">@Brand.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Model" asp-action="Index" asp-route-BrandId="@Brand.BrandId" class="btn btn-primary mx-2">View Models</a>
                            <a asp-controller="Brand" asp-action="Edit" asp-route-id="@Brand.BrandId" class="btn btn-secondary mx-2">Edit</a>
                            <a asp-controller="Brand" asp-action="Delete" asp-route-id="@Brand.BrandId" class="btn btn-danger mx-2">Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <p>No brands found.</p>
    </div>
}
