@model List<BodyType>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">List of Body types</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="BodyType" asp-action="Create" class="btn btn-primary">
                Add New Body Type
            </a>
        </div>
    </div>
</div>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-strpied">
        <thead>
            <tr>
                <th class="text-center">
                    Body type
                </th>
                <th class="text-center">
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var BodyType in Model)
            {
                <tr>
                    <td class="text-center">@BodyType.Type</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="BodyType" asp-action="Edit" asp-route-id="@BodyType.BodyTypeId" class="btn btn-secondary mx-2">Edit</a>
                            <a asp-controller="BodyType" asp-action="Delete" asp-route-id="@BodyType.BodyTypeId" class="btn btn-danger mx-2">Remove</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center">
        <p>No body types found.</p>
    </div>
}

